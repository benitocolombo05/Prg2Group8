<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head') %>
<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->
	
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%=productos.nombre%></h2> 
			<p class="product-detail-description">
				<a href="/agregar">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%=productos.imagen%>" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%=productos.descripcion%>
					</p>
					<p class="product-detail-description" style="font-weight: 400;"><strong><a href="/users/profile/<%=productos.usuario.id%>">Subido por: <%=productos.usuario.nombre%></a></strong></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">

						<% for (let i = 0; i < productos.comentarios.length; i++) { %>
							<article>
								<img src="<%= productos.comentarios[i].usuario.foto_perfil %>" alt="">
								<div class="data">
									<p class="user">
										<strong><a href="/users/profile/<%= productos.comentarios[i].usuario.id %>"><%= productos.comentarios[i].usuario.nombre %>:</a></strong>
										<%= productos.comentarios[i].texto %>
									</p>
								</div>
							</article>
						<% } %>

					</section>
					<form class="form" action="/products/commentProcessor/<%=productos.id%>" method="post">
						<input class="form-input" name="comentario" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->

</body>	
</html>